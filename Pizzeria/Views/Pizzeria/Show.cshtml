@using Microsoft.AspNetCore.Components

@{
    ViewData["Title"] = "Dettaglio Pizza";
    Layout = "_CustomLayout";
}

@model Pizza

<section class="show-pizza">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="card h-100">
                    <img src="@Url.Content(Model.FotoUrl)" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@Model.Name</h5>
                        <h3 class="card-title">@Model.GetDisplayedCategory()</h3>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">Ingridients:</p>
                        @foreach (Ingredient i in Model.Ingredients)
                        {
                            <p>@i.Name</p>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="price">@Model.Price euro</div>
                            @* <a href="@Url.Action("Show", "Pizzeria", pizza )" class="btn btn-primary">Ordina</a> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>